<p id="notice"><%= flash[:notice] %></p>
<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">名前</label></br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></br>
  <label for="inputIntroduction">自己紹介</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%></br>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></br>
  <label for="inputImage">プロフィール画像</label></br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></br>
  <%= f.submit "変更を保存" ,class: "btn btn-sm btn-success"%>
<% end %>